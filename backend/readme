    password: process.env.DB_PASSWORD || "",
    database: process.env.DB_NAME || "xyro_db",
});

db.connect(err => {
    if (err) {
        console.error("âŒ Error al conectar a MySQL:", err);
        return;
    }
    console.log("âœ… ConexiÃ³n exitosa a MySQL");
});

module.exports = db;
